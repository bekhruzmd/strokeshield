modules = ["nodejs-20"]

[nix]
channel = "stable-24_05"

[workflows]
runButton = "Project"

[[workflows.workflow]]
name = "Project"
mode = "parallel"
author = "agent"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "StrokeDetection"

[[workflows.workflow.tasks]]
task = "workflow.run"
args = "BuildClientAndServe"

[[workflows.workflow]]
name = "StrokeDetection"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd server && npm install && NODE_ENV=production PORT=5000 node index.js"
waitForPort = 5000

[[workflows.workflow]]
name = "BuildClientAndServe"
author = "agent"

[workflows.workflow.metadata]
agentRequireRestartOnSave = false

[[workflows.workflow.tasks]]
task = "packager.installForAll"

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "cd client && npm install && npm run build && cd ../server && npm install && NODE_ENV=production PORT=5000 node index.js"
waitForPort = 5000

[deployment]
run = ["sh", "-c", "cd server && npm install && NODE_ENV=production PORT=5000 node index.js"]

[[ports]]
localPort = 5000
externalPort = 80
